{
	"name": "node-red-contrib-insteon",
	"version": "0.5.0",
	"description": "Insteon nodes for Node-RED",
	"license": "MIT",
	"scripts": {
		"prepublish": "yarn run build",
		"build": "rm -r dist/* && yarn run copyFiles & yarn run build:ts",
		"build:ts": "tsc",
		"build:debug": "tsc -d --watch",
		"copyFiles": "copyfiles -u 1 src/**/*.html dist/",
		"debug": "ts-node ./test/debug",
		"watch": "watch 'yarn run build' src",
		"watch:files": "watch 'yarn run copyFiles' src"
	},
	"node-red": {
		"nodes": {
			"PLMConfig": "./dist/PLMConfig/PLMConfig.js",
			"insteon-PLM": "./dist/insteonPLM/insteonPLM.js",
			"insteon-Device": "./dist/insteonDevice/insteonDevice.js"
		}
	},
	"files": [
		"dist/"
	],
	"devDependencies": {
		"@types/node-red": "^0.20.0",
		"@types/serialport": "^7.0.4",
		"copyfiles": "^2.1.1",
		"ts-node": "^8.3.0",
		"typescript": "^3.5.3",
		"watch": "^1.0.2"
	},
	"dependencies": {
		"insteon-plm": "^0.3.1"
	}
}
